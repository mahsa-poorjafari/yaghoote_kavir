= form_for @gallery do |f|
  - if @gallery.errors.any?
    #error_explanation
      
      %ul
        - @gallery.errors.each do |attr, msg|
          %li= msg

  .field
    = f.label :عنوان 
    = f.text_field :title
  .field
    = f.label :تصویر
    = f.file_field :photo
  .field
    = f.label :توضیحات
    = f.text_field :description
  .actions
    = f.submit 'ثبت'
