= form_for @subgroup do |f|
  - if @subgroup.errors.any?
    #error_explanation
      
      %ul
        - @subgroup.errors.each do |attr, msg|
          %li= msg

  .field
    = f.label 'گروه مربوط را انتخاب کنید'
    = f.select(:category_id, Category.all.collect {|u| [u.title_fa, u.id]}, :prompt => ' گروه مربوط را انتخاب کنید') 
  .field
    = f.label' عنوان زیرگروه'
    = f.text_field :title
  .field
    = f.label 'توضیحات'
    = f.text_field :description
  .actions
    = f.submit 'ثبت'
