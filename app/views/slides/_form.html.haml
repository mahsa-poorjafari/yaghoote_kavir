= form_for @slide do |f|
  - if @slide.errors.any?
    #error_explanation
      
      %ul
        - @slide.errors.each do |attr, msg|
          %li= msg

  .field
    = f.label 'انتخاب عکس'
    = f.file_field :image
  .field
    = f.label 'توضیحات به فارسی:'
    = f.text_field :description_fa
  .field
    = f.label 'توضیحات به انگلیسی:'
    = f.text_field :description
  .actions
    = f.submit 'Save'
