%section#portfolio.two  
  .container
    %header
      %h2= @product.title
    .col-sm-6
      - @product.pictures.each do |pic|
        .col-sm-3= image_tag pic.image(:medium)
      .clear-float 
    .col-sm-6    
      = @product.description
  - if is_admin?
    = link_to 'ویرایش', edit_product_path(@product)
    \|
    = link_to 'بازگشت', products_path
.clear-float 
